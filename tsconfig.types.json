{
    // tsconfig.base.json - configura√ß√µes comuns reutiliz√°veis
    "compilerOptions": {
        // Alvo e m√≥dulos
        "target": "ES2021", // Ajustado para ES2021 aqui tamb√©m, para maior clareza
        "module": "ESNext",
        "lib": ["ES2021", "DOM"],

        // Resolu√ß√£o e entradas/sa√≠das
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": "./src",
        // "outDir": "./dist", // ‚¨ÖÔ∏è REMOVIDO/COMENTADO! A sa√≠da JS fica nos arquivos espec√≠ficos (cjs/esm)

        // üéØ GERA√á√ÉO DE TIPOS
        "declaration": true, 
        "declarationMap": true,
        "declarationDir": "./dist/types", // ‚¨ÖÔ∏è NOVO: Arquivos .d.ts ser√£o salvos aqui.

        // Seguran√ßa / qualidade
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        // Interop / compatibilidade
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        // Maps / sourcemaps
        "sourceMap": true,

        // Performance
        "incremental": true,
        "tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo",

        // Paths 
        "paths": {
            "@/*": ["src/*"]
        }
    },

    // Arquivos inclu√≠dos/exclu√≠dos
    "include": ["src"],
    "exclude": ["node_modules", "dist", "build", "**/*.spec.ts", "**/*.test.ts"]
}